package day0218;

public class DataType_05 {

	public static void main(String[] args) {
		// 기본자료형 8가지

		//1. 논리형, true, false
		boolean flag = false;
		
		// 2.문자형
		// 반드시 하나의 문자를 가지며 2바이트 : C언어는 1바이트라 한글표현불가능
		// 기본적으로 정수형, 아스키코드로 변경가능하다... ' '(소따옴표)로 표현
		char ch = '가';
		
		// 3. 정수형
		byte a = 111; // 1바이트 -128~127까지 가능
		short b = 22222 ; // 2바이트(16비트) 
		int c = 2111111111; //4바이트(32비트)
		long num = 4444444444444444444l; //8바이트(64비트) 반드시 끝에 l을 붙여야한다
		
		// 4. 실수형
		double d = 42451.12352; // 64비트
		float f = 3.124567f; // 32비트 뒤에 꼭 f를 붙여야한다

		//출력
		System.out.println("flag = " + flag);
		System.out.println("NOT Flag = " + !flag);
		System.out.println("ch = " + ch);
		
		
		//전체자리수 10자리중 소수점 2자리
		System.out.printf("d = %20.4f\n", d);
		
	}

}
